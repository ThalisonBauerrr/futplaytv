              // Agrupar canais por nome
              const grouped = {};
              canais.forEach(canal => {
                if (!grouped[canal.name]) grouped[canal.name] = [];
                grouped[canal.name].push(canal);
              });
              %>

              <% Object.keys(grouped).forEach(name => { 
                  const canaisGrupo = grouped[name];
              %>

                <% if (canaisGrupo.length === 1) { 
                  // Apenas 1 canal, mostrar botão normal para cada url 
                  const canal = canaisGrupo[0];
                  canal.urls.forEach(stream => {
                    const isAtivo = stream.url === urlInicial;
                    const showAdImage = stream.index >= 4 && stream.index <= 6;
                %>
                  <button
                    class="channel-btn <%= isAtivo ? 'active' : '' %>"
                    data-channel="<%= stream.url %>"
                    data-index-original="<%= stream.index %>"
                  >
                    <i class="fas fa-satellite-dish"></i>
                    <%= canal.name %>
                    <% if (stream.index > 0) { %>
                      <span> Alternativo <%= stream.index %></span>
                    <% } %>
                    <% if (showAdImage) { %>
