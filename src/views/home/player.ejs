                id="stream-iframe"
                src="<%= urlInicial %>"
                referrerpolicy="strict-origin-when-cross-origin"
                allow="encrypted-media;autoplay"
                allowfullscreen
                frameborder="0"
                <%= indexInicial <= 3 ? 'sandbox="allow-scripts allow-same-origin"' : '' %>
